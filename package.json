{
  "name": "kan-monorepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "format": "biome check --write .",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "deploy:cf": "turbo deploy",
    "tail": "pnpm --filter @kan/web exec wrangler tail",
    "knip": "knip",
    "db:push": "pnpm --filter @kan/api db:push"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.3",
    "knip": "^5.84.0",
    "turbo": "^2.4.4"
  },
  "dependencies": {
    "@kan/api": "workspace:*",
    "@neondatabase/serverless": "^1.0.0",
    "drizzle-orm": "^0.42.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
